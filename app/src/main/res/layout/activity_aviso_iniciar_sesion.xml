<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linear_gradient"
    tools:context="ml.byta.byta.Activities.AvisoIniciarSesion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/mensaje_registrate"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/slide_title"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/mensaje_registrate2"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/slide_title"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textAlignment="center"/>


        <Button
            android:id="@+id/iniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:text="@string/iniciarSesion"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_desc"
            android:background="@color/bg_slider_screen1"
            android:clickable="true"
            android:onClick="inicioSesion"/>

    </LinearLayout>





</RelativeLayout>
